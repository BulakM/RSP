{% extends  'layout/main.html.twig' %}

{% block pagetitle %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Vyhledat příspěvek</h1>
        </div>
    </div>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="panel-body">
            <div class="row">
              {{ form_start(form) }}
              {{ form_errors(form) }}
              <div class="col-md-10 col-sm-10 col-xs-10">
                {{ form_row(form.hash) }}
              </div>
              <div class="col-md-2 col-sm-2 col-xs-2" style="margin-top: 25px;">
                <button type="submit" class="btn btn-default" style="margin-right: inherit">Pošli příspěvek</button>
              </div>
              {{ form_end(form) }}
            </div>
            {% if prispevek != null %}
              <br>
              <div class="row">
                <table class="table">
                    <tr>
                        <th>Název</th>
                        <th>Text</th>
                        <th>Stav</th>
                        <th></th>
                    </tr>
                    <tr>
                        <td>{{ prispevek.nazev }}</td>
                        <td>{{ prispevek.text }}</td>
                        <td>{{ prispevek.stav }}</td>
                        <td></td>
                    </tr>
                </table>
              </div>
            <div class="row">
              <h3>Recenze</h3>
                <table class="table">
                    <tr>
                        <th>Datum napsání</th>
                        <th>Odbornost</th>
                        <th>Zajímavost</th>
                        <th>Aktuálnost</th>
                        <th>Text</th>
                        <th></th>
                    </tr>
                    {% for recenze in prispevek.recenze %}
                    <tr class="{% if recenze.odbornost + recenze.zajimavost + recenze.aktualnost > 7 %}success{% else %}danger{% endif %}">
                        <td>{{ recenze.datumVytvoreni|date('Y-m-d H:i:s') }}</td>
                        <td>{{ recenze.odbornost }}</td>
                        <td>{{ recenze.zajimavost }}</td>
                        <td>{{ recenze.aktualnost }}</td>
                        <td>{{ recenze.text }}</td>
                        <td></td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
          {% endif %}
        </div>
    </div>
{% endblock %}
{% block javascripts %}

{% endblock %}
