{% extends  'layout/mainBackend.html.twig' %}

{% block pagetitle %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Uprav příspěvek: {{ prispevek.nazev}}</h1>
        </div>
    </div>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="panel-body">
            <div class="row">
              <h3>
                {{ prispevek.nazev }}
              </h3>
              <div class="col-md-12 col-sm-12 col-xs-12">
                {{ prispevek.text }}
              </div>
              {{ form_start(form) }}
              {{ form_errors(form) }}
              <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_row(form.stav) }}
              </div>
              <div class="col-md-12 col-sm-12 col-xs-12">
                  <br>
                  <button type="submit" class="btn btn-default pull-right" style="margin-right: inherit">Ulož příspěvek</button>
              </div>
              {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}

{% endblock %}
