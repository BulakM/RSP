{% extends  'layout/main.html.twig' %}

{% block pagetitle %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Přidat příspěvek</h1>
        </div>
    </div>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="panel-body">
            <div class="row">
                <form role="form">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label>Kontaktní email</label>
                            <input class="form-control"
                                   placeholder="Napište sem email na který, Vás můžeme kontaktovat"
                                   name="email">
                        </div>
                        <div class="form-group">
                            <label>Příspěvek</label>
                            <textarea class="form-control" rows="3" placeholder="Vložte sem Váš příspěvek" name="prispevek" style="min-height: 20vh;"></textarea>
                        </div>
                    </div>
                    <div class="col-lg-6 form-group">
                        <label>Číslo časopisu</label>
                        <select class="form-control" name="cislo">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                        </select>
                    </div>
                    <div class="col-lg-6 form-group">
                        <label>Téma časopisu</label>
                        <select class="form-control" name="tema">
                            <option>tema 1</option>
                            <option>rybicky nesmrdi</option>
                        </select>
                    </div>
                    <div class="col-lg-12">
                        <button type="submit" class="btn btn-default" style="float: right; margin-right: inherit">Pošli příspěvek</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}

{% endblock %}