{% extends  'layout/mainBackend.html.twig' %}

{% block pagetitle %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Změna vašeho hesla</h1>
        </div>
    </div>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="panel-body">
            <div class="row">
              {{ form_start(form) }}
              {{ form_errors(form) }}
              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="col-md-6 col-sm-6 col-xs-6">
                  {{ form_row(form.oldPassword) }}
                </div>
                <div class="col-md-6 col-sm-6 col-xs-6"></div>
              </div>
              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="col-md-6 col-sm-6 col-xs-6">
                  <br><br>
                  {{ form_row(form.newPassword) }}
                  <br><br>
                    <button type="submit" class="btn btn-default pull-right" style="margin-right: inherit">Ulož změnu</button>
                </div>
              </div>
              {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}

{% endblock %}
