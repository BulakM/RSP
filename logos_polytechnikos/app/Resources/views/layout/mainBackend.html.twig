<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>{% block title %}Logos Polytechnikos{% endblock %}</title>

    <link href="{{ asset('/bower_components/bootstrap/dist/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('/bower_components/sb-admin-2/css/plugins/metisMenu/metisMenu.min.css') }}" rel="stylesheet">
    <link href="{{ asset('/bower_components/sb-admin-2/css/sb-admin-2.css') }}" rel="stylesheet">
    <link href="{{ asset('/bower_components/sb-admin-2/css/plugins/dataTables.bootstrap.css') }}" rel="stylesheet">
    <link href="{{ asset('/bower_components/sb-admin-2/font-awesome-4.1.0/css/font-awesome.min.css') }}" rel="stylesheet">
    <link href="{{ asset('/styles/base.css') }}" rel="stylesheet">
    <link href="https://nightly.datatables.net/css/jquery.dataTables.css" rel="stylesheet" type="text/css"/>
    <link href="{{ asset('/bower_components/select2/dist/css/select2.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('/bower_components/select2-bootstrap-theme/dist/select2-bootstrap.css') }}" rel="stylesheet" />
    <link href="{{ asset('/bower_components/sb-admin-2/css/plugins/metisMenu/metisMenu.min.css') }}" rel="stylesheet" >

    <script src="{{ asset('/bower_components/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('/bower_components/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('/bower_components/sb-admin-2/js/sb-admin-2.js') }}"></script>
    <script src="{{ asset('/bower_components/sb-admin-2/js/plugins/dataTables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('/bower_components/select2/dist/js/select2.min.js') }}"></script>
    <script src="{{ asset('/bower_components/sb-admin-2/js/plugins/metisMenu/metisMenu.min.js') }}"></script>
    <script src="{{ asset('/js/base.js') }}"></script>
</head>
<body>
<div id="wrapper">
    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <a class="navbar-brand" href="{{ path('index_casopis') }}">
                <img src="/logos_polytechnikos.png" alt="logos_polytechnikos" />
            </a>
        </div>
        <!-- /.navbar-header -->
        <ul class="nav navbar-top-links navbar-right">
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="{{ path('index_casopis') }}">
                    <i class="fa fa-user fa-fw"></i> {{ app.user.jmeno }} {{ app.user.prijmeni }} <i class="fa fa-caret-down"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li class="text-center"><b>{{ app.user.jmeno }}</b>
                    </li>
                    <li class="divider"></li>
                    <li><a href="{{ path('index_casopis') }}"><i class="fa fa-clipboard" aria-hidden="true"></i> Úvodní stránka</a></li>
                    <li><a href="{{ path('fos_user_change_password') }}"><i class="fa fa-cogs" aria-hidden="true"></i> Změna hesla</a></li>
                    <li><a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-sign-out fa-fw"></i> Odhlásit se</a></li>
                </ul>
                <!-- /.dropdown-user -->
            </li>
        </ul>

        <div id="navbar-default-left-menu" class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse">
                <ul class="nav margin-top-16px" id="side-menu">
                  <li>
                      <a href="#"><i class="fa fa-file" aria-hidden="true"></i>
                         Příspěvky <span class="fa arrow"></span>
                      </a>
                      <ul class="nav nav-second-level">
                          {% if is_granted('ROLE_ADMIN') %}
                              <li>
                                  <a href="{{ path('index_prispevek_backend', {'stav' : 3}) }}"> &nbsp;<i class="fa fa-check" aria-hidden="true"></i> Publikované příspěvky</a>
                              </li>
                          {% endif %}
                          {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_REDAKTOR')%}
                              <li>
                                  <a href="{{ path('index_prispevek_backend', {'stav' : 2}) }}"> &nbsp;<i class="fa fa-thumbs-o-up" aria-hidden="true"></i> Schválené příspěvky</a>
                              </li>
                          {% endif %}
                          {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_RECENZENT')%}
                              <li>
                                  <a href="{{ path('index_prispevek_backend', {'stav' : 1}) }}"> &nbsp;<i class="fa fa-university" aria-hidden="true"></i> Recenzní řízení</a>
                              </li>
                          {% endif %}
                          {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_EDITOR')%}
                              <li>
                                  <a href="{{ path('index_prispevek_backend', {'stav' : 0}) }}"> &nbsp;<i class="fa fa-file-archive-o" aria-hidden="true"></i> Příspěvky ke schválení</a>
                              </li>
                              <li>
                                  <a href="{{ path('index_prispevek_backend', {'stav' : -1}) }}"> &nbsp;<i class="fa fa-trash-o" aria-hidden="true"></i> Smazané příspěvky</a>
                              </li>
                          {% endif %}
                      </ul>
                      <!-- /.nav-second-level -->
                  </li>
                  <li>
                        <a href="#"><i class="glyphicon glyphicon-list-alt"></i>
                            Časopisy <span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_REDAKTOR') %}
                                <li>
                                    <a href="{{ path('add_casopis') }}"><i class="fa fa-plus" aria-hidden="true"></i> Přidat časopis</a>
                                </li>
                            {% endif %}
                            <li>
                                <a href="{{ path('index_casopis_backend', {'stav' : 3}) }}"><i class="fa fa-download" aria-hidden="true"></i> Publikované časopisy</a>
                            </li>
                            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_REDAKTOR')%}
                                <li>
                                    <a href="{{ path('index_casopis_backend', {'stav' : 2}) }}"> <i class="fa fa-thumbs-o-up" aria-hidden="true"></i> Schválené časopisy</a>
                                </li>
                            {% endif %}
                            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_EDITOR')%}
                                <li>
                                    <a href="{{ path('index_casopis_backend', {'stav' : 0}) }}"> <i class="fa fa-file-archive-o" aria-hidden="true"></i> Časopisy ke schválení</a>
                                </li>
                                <li>
                                    <a href="{{ path('index_casopis_backend', {'stav' : -1}) }}"> <i class="fa fa-trash-o" aria-hidden="true"></i> Smazané časopisy</a>
                                </li>
                            {% endif %}
                        </ul>
                        <!-- /.nav-second-level -->
                    </li>
                  {% if is_granted('ROLE_ADMIN') %}
                      <li>
                          <a href="#"><span class="glyphicon glyphicon-user"></span>
                             Uživatelé <span class="fa arrow"></span>
                          </a>
                          <ul class="nav nav-second-level">
                              <li>
                                  <a href="{{ path('add_uzivatel') }}"> &nbsp;<i class="fa fa-plus" aria-hidden="true"></i> Přidat uživatele</a>
                              </li>
                              <li>
                                  <a href="{{ path('index_uzivatel_backend') }}"><i class="fa fa-users" aria-hidden="true"></i> Přehled uživatelů</a>
                              </li>
                          </ul>
                          <!-- /.nav-second-level -->
                      </li>
                  {% endif %}
                  {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_REDAKTOR') %}
                      <li>
                          <a href="{{ path('add_tema') }}"><i class="fa fa-picture-o" aria-hidden="true"></i> Přidat téma</a>
                      </li>
                  {% endif %}
                </ul>
            </div>
            <!-- /.sidebar-collapse -->
        </div>
        <!-- /.navbar-static-side -->
    </nav>

    <div id="page-wrapper">
        <div class="row">
            <h2 class="page-header">{% block pagetitle %}{% endblock %}</h2>
            <div class="flash-messenger">
                {% for flash_message in app.session.flashBag.get('error') %}
                    <div class="alert alert-danger" role="alert">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        {{ flash_message|trans }}
                    </div>
                {% endfor %}

                {% for flash_message in app.session.flashBag.get('notice') %}
                    <div class="alert alert-info" role="alert">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        {{ flash_message|trans }}
                    </div>
                {% endfor %}

                {% for flash_message in app.session.flashBag.get('success') %}
                    <div class="alert alert-success" role="alert">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        {{ flash_message|trans }}
                    </div>
                {% endfor %}
            </div>
                {% block body %}{% endblock %}
                {% block fos_user_content %}{% endblock fos_user_content %}
        </div>
      </div>
  </div>

  {% block javascripts %}{% endblock %}
  {% block modal %}
      <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog">
              <div class="modal-content">
              </div>
          </div>
      </div>
  {% endblock %}
</body>

</html>
