{% extends  'layout/mainBackend.html.twig' %}

{% block pagetitle %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Úprava uživatele {{ uzivatel.username }}</h1>
        </div>
    </div>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="panel-body">
            <div class="row">
              {{ form_start(form) }}
              {{ form_errors(form) }}
              <div class="col-md-6 col-sm-6 col-xs-6">
                {{ form_row(form.jmeno) }}
              </div>
              <div class="col-md-6 col-sm-6 col-xs-6">
                {{ form_row(form.prijmeni) }}
              </div>
              <div class="col-md-6 col-sm-6 col-xs-6">
                <br>
                {{ form_label(form.enabled) }} {{ form_widget(form.enabled) }}
                <br>
                <label for="uzivatel_roles" class="required">Uživatelské role</label>
                <br>
                {% for form_role in form.roles %}
                  {{ form_label(form_role) }} {{ form_widget(form_role) }}
                  <br>
                {% endfor %}
              </div>
              <div class="col-md-12 col-sm-12 col-xs-12">
                <br>
                  <button type="submit" class="btn btn-default pull-right" style="margin-right: inherit">Ulož změnu</button>
              </div>
              {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}

{% endblock %}
