{% extends  'layout/mainBackend.html.twig' %}

{% block pagetitle %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Přidat recenzi</h1>
        </div>
    </div>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="panel-body">
            <div class="row">
              {{ form_start(form) }}
              {{ form_errors(form) }}
              <div class="col-md-4 col-sm-4 col-xs-6">
                {{ form_row(form.odbornost) }}
              </div>
              <div class="col-md-4 col-sm-4 col-xs-6">
                {{ form_row(form.zajimavost) }}
              </div>
              <div class="col-md-4 col-sm-4 col-xs-6">
                {{ form_row(form.aktualnost) }}
              </div>
              <div class="col-md-12 col-sm-12 col-xs-12">
                <br>
                {{ form_row(form.text) }}
              </div>
              <div class="col-md-12 col-sm-12 col-xs-12">
                <br>
                  <button type="submit" class="btn btn-default pull-right" style="margin-right: inherit">Ulož recenzi</button>
              </div>
              {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}

{% endblock %}
