{% extends  'layout/mainBackend.html.twig' %}

{% block pagetitle %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Editace časopisu: {{ casopis }}</h1>
        </div>
    </div>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="panel-body">
            <div class="row">
              {{ form_start(form) }}
              {{ form_errors(form) }}
              <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_row(form.rok) }}
              </div>
              <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_row(form.cislo) }}
              </div>
              <div class="col-md-6 col-sm-6 col-xs-12">
                {{ form_row(form.temata) }}
              </div>
              <div class="col-md-6 col-sm-6 col-xs-12">
                  {% if casopis.casopis != null %}
                      {{ form_label(form.casopis) }}
                      {{ form_errors(form.casopis) }}
                      <div class="row">
                          <div class="col-md-1 col-sm-1 col-xs-1">
                                  <a href="{{ asset('uploads/casopisy/' ~ casopis.casopis) }}"
                                     class="btn btn-default" target="_blank">
                                      <span class="glyphicon glyphicon-download-alt"></span>
                                  </a>
                          </div>
                          <div class="col-md-11 col-sm-11 col-xs-11">
                              {{ form_widget(form.casopis) }}
                          </div>
                      </div>
                  {% else %}
                      {{ form_label(form.casopis) }}<br>
                      {{ form_errors(form.casopis) }}
                      {{ form_widget(form.casopis) }}
                  {% endif %}
              </div>
              <div class="col-md-6 col-sm-6 col-xs-12">
                  {{ form_row(form.uzaverka) }}
              </div>
              <div class="col-md-12 col-sm-12 col-xs-12">
                  <br>
                  <button type="submit" class="btn btn-default pull-right" style="margin-right: inherit">Ulož časopis</button>
              </div>
              {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}

{% endblock %}
